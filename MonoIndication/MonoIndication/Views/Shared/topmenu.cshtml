<script type="text/javascript">
    $(function () {
        $(document).mousemove(function (event) {
            try {
                var scrolled = $(document).scrollTop();
                if (scrolled > 40) {

                    if (event.pageY > scrolled + 30) {
                        $('nav.navbar').css('margin-top', '-50px');
                    } else {
                        $('nav.navbar').css('margin-top', '0px');
                    }
                } else {
                    $('nav.navbar').css('margin-top', '0px');
                }
            } catch (e) {
                $('nav.navbar').css('margin-top', '0px');
            }

        });

        $("nav.navbar").mousemove(function (event) {
            event.stopPropagation();
        });
        
        //беру данные о текущей температуре из сервиса openweathermap.org
        openweathermap(function (data) {
            
                var temp = +data.main.temp;
                var dt = new Date(data.dt * 1000);
                $("#currentTemp").html(temp.toFixed(1) + ' &deg;C');
                $("#currentTemp").attr('title', 'Температура воздуха по состоянию на: ' + dt.toLocaleString());
            
                var rgb = new RedBlueColorGenerator(-30, 40);
                

                $("#currentTemp").css('color', rgb.RGB(temp));

            // сохраняю температуру в базу
                $.ajax({
                    url: '@Url.Action("SaveCurrentTemp","Request")',
                    data: { 'temp': temp },
                    dataType: 'json',
                    method: 'POST'
                });
        });
    });
</script>
