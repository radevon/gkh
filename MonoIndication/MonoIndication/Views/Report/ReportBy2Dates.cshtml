@model IEnumerable<SelectListItem>
@{ 
    ViewBag.Title = "Отчет по 2 датам";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@Html.Partial("topmenu")

@section Css{
    <link rel="stylesheet" type="text/css" href='@Url.Content("~/css/bootstrap-datetimepicker.css")'>
}

<div class="container" style="margin-top: 65px">
    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <h2 class="text-primary">Сводный отчет по объектам на основе показаний за период</h2>
        </div>
    </div>
    @using (Html.BeginForm("ToExcel", "Report", FormMethod.Post, new { @class = "form" }))
    {
    <div class="row">
       
        <div class="col-md-4 col-lg-4 col-sm-6">
            Начальная дата
            <input type="text" id="from" name="from" required class="form-control"/>
        </div>
        <div class="col-md-4 col-lg-4 col-sm-6">
            Конечная дата
            <input type="text" id="to" name="to" required class="form-control" />
        </div>
        <div class="col-md-4 col-lg-4 col-sm-6">
            Группа объектов
            @Html.DropDownList("GroupId", Model, new { @class = "form-control" })
           
        </div>
    </div>
        <div class="row" style="padding:5px 0">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <input type="submit" class="btn btn-primary" value="Получить отчёт в Excel" title="На компьютере обязательно должен быть установлен Microsoft Office Excel" />
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <a id="ReportToScreen" href="#" class="btn btn-default pull-right" title="Вывести таблицу отчета на экран (не требуется установка excel)">Отчет на экран</a>

                <a id="ReportBuh" href="#" class="btn btn-default" title="">Отчет в бухгалтерию</a>
            </div>
        </div>
    
    }
    <div class="row">
        <div class="col-md-4 col-xs-4 col-sm-4 col-xs-offset-8 col-sm-offset-8 col-md-offset-8">
            
        </div>
    </div>
</div>

@section Scripts {
<script type="text/javascript" src='@Url.Content("~/js/moment-with-locales.min.js")'></script>
<script type="text/javascript" src='@Url.Content("~/js/bootstrap-datetimepicker.js")'></script>

<script type="text/javascript">
    $(function () {
        $("#from").datetimepicker({
            inline: false,
            locale: 'ru',
            sideBySide: true,
            defaultDate: moment().subtract(30, 'd'),
            maxDate: new Date(),
            format: 'DD.MM.YYYY'
        });

        $("#to").datetimepicker({
            inline: false,
            locale: 'ru',
            sideBySide: true,
            defaultDate: new Date(),
            //minDate: moment(),
            maxDate: new Date(),
            format: 'DD.MM.YYYY'
        });


        $("#ReportToScreen").click(function (e) {
            window.location.href = '@Url.Action("GoReport","Report")' + '?from=' + moment($("#from").val(), 'DD.MM.YYYY').toISOString() + '&to=' + moment($("#to").val(), 'DD.MM.YYYY').toISOString() + '&GroupId=' + $("#GroupId").val();
            e.preventDefault();
            return false;
        });

        $("#ReportBuh").click(function (e) {
            window.location.href = '@Url.Action("Buhgaltery","Report")' + '?from=' + moment($("#from").val(), 'DD.MM.YYYY').toISOString() + '&to=' + moment($("#to").val(), 'DD.MM.YYYY').toISOString() + '&GroupId=' + $("#GroupId").val();
            e.preventDefault();
            return false;
        });
    });
    </script>
    }
